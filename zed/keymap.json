[
  {
    "bindings": {
      "ctrl-x": "terminal_panel::ToggleFocus",
      "ctrl-e": "workspace::ToggleLeftDock",
      "ctrl-p": "file_finder::Toggle",
      "ctrl-j": "tab_switcher::Toggle",
      "ctrl-t": "outline::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8],
      "cmd-d": "pane::SplitRight"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-k": "editor::ShowSignatureHelp",
      "shift-alt-up": "editor::DuplicateLineUp",
      "shift-alt-down": "editor::DuplicateLineDown"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      ";": ["workspace::SendKeystrokes", ":"],
      "space r": "editor::Rename",
      "space f": "editor::Format",
      "g r": "editor::FindAllReferences",
      "g i": "editor::GoToImplementation",
      "shift-d": "editor::Hover",
      "space g": "pane::DeploySearch",
      "space w": "project_symbols::Toggle",
      "space d": "diagnostics::Deploy",
      "space e": "diagnostics::Deploy",
      "space k": "editor::FindAllReferences",
      "space .": "project_panel::ToggleFocus",
      "space shift-t": "theme_selector::Toggle",
      "space t h": "theme_selector::Toggle",
      "space t b": "editor::ToggleGitBlame",
      "space x x": "diagnostics::Deploy",
      "space c s": "outline::Toggle",
      "|": "pane::SplitRight",
      "_": "pane::SplitDown",
      "] b": "pane::ActivateNextItem",
      "[ b": "pane::ActivatePrevItem",
      "space space": "pane::AlternateFile",
      "shift-u": "editor::Redo",
      "space a": "editor::SelectAll",
      "space c l": "editor::CopyPath",
      "space v t": "workspace::ToggleRightDock",
      "space v f": "assistant::ToggleFocus"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "space c a": "editor::ToggleCodeActions",
      "space v a": "assistant::InlineAssist",
      "space v e": "assistant::InlineAssist"
    }
  }
]
